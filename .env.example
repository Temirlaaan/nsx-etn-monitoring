# NSX-T Manager Configuration
NSX_MANAGER_URL=nsx
NSX_USERNAME=admin
NSX_PASSWORD=your_password_here

# ETN SSH Credentials
ETN_SSH_USERNAME=admin
ETN_SSH_PASSWORD=your_etn_password_here
ETN_SSH_PORT=22

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Scheduler Configuration (cron format)
# Check NSX for new ETN every 2 days at 02:00
NSX_CHECK_CRON=0 2 */2 * *
# Check certificates every week on Monday at 03:00
CERT_CHECK_CRON=0 3 * * 1

# Certificate Expiry Warning (days)
CERT_WARNING_DAYS=30

# ETN Filtering (optional - for testing specific nodes)
# Leave empty to monitor all ETN, or specify comma-separated IPs
# Example: ETN_WHITELIST=10.11.35.7,10.11.35.8,10.11.35.2,10.11.35.11
ETN_WHITELIST=

# Database
DATABASE_URL=sqlite+aiosqlite:///./etn_monitor.db

# Web Server
WEB_HOST=0.0.0.0
WEB_PORT=8000
